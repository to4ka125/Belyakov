<Window x:Class="Belyakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belyakov"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="300" WindowStyle="None">
    <Grid>
        <StackPanel>
            <Button Margin="14" HorizontalAlignment="Right" Style="{StaticResource BtnClose}"/>

            <Image Margin="12" Width="80" Source="/Image/IconHospital.png"/>

            <TextBox x:Name="tx1" Margin="0 15" Style="{StaticResource pcaholderText}"  Width="200" Height="50" Tag="Логин"/>

            <PasswordBox  x:Name="pw1" Style="{StaticResource pcaholderTextPassword}"  Width="200" Height="50" Tag="Пароль"/>

            <Button Style="{StaticResource btnStyle}" Width="125" Height="50" Content="Войти" Margin="0 64 0 0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
