<Window x:Class="Belyakov.Forms.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belyakov.Forms"
        mc:Ignorable="d"
        Title="Captha" Height="440" Width="300" WindowStyle="None" Loaded="Window_Loaded"  WindowStartupLocation="CenterScreen" Background="#fff">
        

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0 15">
                <Image Margin="18 0" Width="40" Source="/Image/IconHospital.png"/>
                <TextBlock Text="ИС-21А" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Rectangle Margin="5 0" Width="1" Height="27" Fill="Black"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" >Беляков Виктор <LineBreak/> Серггевич</TextBlock>
                <Button Margin="45 0 0 0" HorizontalAlignment="Right" Style="{StaticResource BtnClose}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"  FontSize="20">Вы успешно <LineBreak></LineBreak> авторизовались!</TextBlock>
        </StackPanel>
    </Grid>
</Window>
